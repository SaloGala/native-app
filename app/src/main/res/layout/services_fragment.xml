<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_services"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/SVServicesLoaded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textColor"
        android:visibility="gone">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:elevation="40dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1.4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TVCarWash"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:paddingLeft="8dp"
                                android:paddingTop="3dp"
                                android:text="@string/btn_auto"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/btnAutolavado"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:onClick="onClick"
                                android:text="Ver todos"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="30dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="30dp"
                                android:layout_weight="2.5"
                                android:background="@color/colorPrimary"
                                android:orientation="vertical"
                                android:padding="15dp">

                                <TextView
                                    android:id="@+id/TVCarWashDistance"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryActionBar"
                                    android:textSize="24dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="center|top"
                                    android:text="mts"
                                    android:textColor="@color/colorPrimaryActionBar"
                                    android:textSize="24dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TVCarWashTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="bottom"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/TVCarWashDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/TVCarWashIndications"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="INDICACIONES"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:elevation="40dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1.4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TVGasStation"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:paddingLeft="8dp"
                                android:paddingTop="3dp"
                                android:text="@string/btn_gas"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/btnGasolineria"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:onClick="onClick"
                                android:text="Ver todos"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="30dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="30dp"
                                android:layout_weight="2.5"
                                android:background="@color/colorPrimary"
                                android:orientation="vertical"
                                android:padding="15dp">

                                <TextView
                                    android:id="@+id/TVGasStationDistance"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryActionBar"
                                    android:textSize="24dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="center|top"
                                    android:text="mts"
                                    android:textColor="@color/colorPrimaryActionBar"
                                    android:textSize="24dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TVGasStationTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="bottom"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/TVGasStationDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/TVGasStationIndications"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="INDICACIONES"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="15dp" />

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:elevation="40dp"
                    app:cardCornerRadius="10dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="1.4"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/TVCarRepair"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1.5"
                                android:paddingLeft="8dp"
                                android:paddingTop="3dp"
                                android:text="@string/btn_taller"
                                android:textSize="20dp" />

                            <Button
                                android:id="@+id/btnTaller"
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:background="@color/colorPrimary"
                                android:onClick="onClick"
                                android:text="Ver todos"
                                android:textColor="@android:color/white" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0px"
                            android:layout_weight="7"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_marginBottom="30dp"
                                android:layout_marginRight="25dp"
                                android:layout_marginTop="30dp"
                                android:layout_weight="2.5"
                                android:background="@color/colorPrimary"
                                android:orientation="vertical"
                                android:padding="15dp">

                                <TextView
                                    android:id="@+id/TVCarRepairDistance"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="center"
                                    android:textColor="@color/colorPrimaryActionBar"
                                    android:textSize="24dp" />

                                <TextView
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="center|top"
                                    android:text="mts"
                                    android:textColor="@color/colorPrimaryActionBar"
                                    android:textSize="24dp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0px"
                                android:layout_height="match_parent"
                                android:layout_weight="4"
                                android:orientation="vertical">

                                <TextView
                                    android:id="@+id/TVCarRepairTitle"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="3"
                                    android:gravity="bottom"
                                    android:textSize="18dp" />

                                <TextView
                                    android:id="@+id/TVCarRepairDescription"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="4"
                                    android:gravity="center_vertical"
                                    android:textSize="16dp" />

                                <TextView
                                    android:id="@+id/TVCarRepairIndications"
                                    android:layout_width="match_parent"
                                    android:layout_height="0px"
                                    android:layout_weight="1"
                                    android:gravity="end"
                                    android:text="INDICACIONES"
                                    android:textColor="@color/colorPrimary" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </android.support.v7.widget.CardView>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <ScrollView
        android:id="@+id/SVServicesNotLoaded"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/textColor"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="30dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:text="Por favor inténtelo nuevamente..."
                    android:textColor="@color/colorPrimaryActionBar"
                    android:textSize="30dp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:text="No se puede obtener su ubicación, revise que esté activada junto con su GPS e inténtelo nuevamente"
                    android:textColor="@color/colorPrimaryActionBar"
                    android:textSize="22dp" />

                <Button
                    android:id="@+id/BTNRefreshServices"
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="2"
                    android:background="@drawable/round_send_button"
                    android:gravity="center"
                    android:text="REINTENTAR"
                    android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                    android:textColor="@android:color/white"
                    android:textSize="18dp" />

                <android.support.v4.widget.Space
                    android:layout_width="match_parent"
                    android:layout_height="0px"
                    android:layout_weight="4" />

            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</LinearLayout>