<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/fragment_perfil"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/textColor"
    android:orientation="vertical"
    android:padding="15dp">

    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:elevation="40dp"
        app:cardCornerRadius="10dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="15dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:text="@string/action_profile"
                android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                android:textColor="@color/textColor"
                android:textSize="30dp" />


            <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/imgUserPhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                app:civ_border_color="#FFF"
                app:civ_border_width="0dp" />

            <!--<ImageView
                android:id="@+id/imgUserPhoto"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center" />-->

            <TextView
                android:id="@+id/txtUserName"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="30dp" />


            <TextView
                android:id="@+id/txtUserEmail"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/textColor"
                android:textSize="20dp" />


            <Button
                android:id="@+id/btnEditarPerfil"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_send_button"
                android:onClick="onClick"
                android:text="@string/editar_perfil"
                android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnVerMetodosPago"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_send_button"
                android:onClick="onClick"
                android:text="@string/btn_metodos_pago"
                android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                android:textColor="@android:color/white" />

            <Button
                android:id="@+id/btnVerVehiculos"
                android:layout_width="match_parent"
                android:layout_height="0px"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:background="@drawable/round_send_button"
                android:onClick="onClick"
                android:text="@string/btn_vehiculos"
                android:textAppearance="@style/AppTheme.TextAppearance.Bold"
                android:textColor="@android:color/white" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>
