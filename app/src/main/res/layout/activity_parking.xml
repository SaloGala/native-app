<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.inflexionlabs.goparken.ParkingActivity">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbarMain"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/white">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:paddingBottom="15dp"
                android:paddingRight="50dp"
                android:paddingTop="15dp"
                android:src="@drawable/login_logo2x" />

        </android.support.v7.widget.Toolbar>

    </android.support.design.widget.AppBarLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imgPaking"
            android:layout_width="220dp"
            android:layout_height="100dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/btnNavigation"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@null"
                android:scaleType="fitCenter"
                android:src="@drawable/boton_indicaciones"
                android:onClick="onClick"/>

            <Space
                android:layout_width="match_parent"
                android:layout_height="20dp" />

            <ImageView
                android:id="@+id/imgAva"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:background="@null"
                android:scaleType="fitCenter"
                />

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/lytInfoParking"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >

        <Spinner
            android:id="@+id/spinnerCards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
             ></Spinner>

        <Button
            android:id="@+id/btnAddCardActivity"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bnt_registrar_pago"
            android:background="@drawable/round_send_button"
            android:textAppearance="@style/AppTheme.TextAppearance.Bold"
            android:textColor="@android:color/white"
            android:visibility="invisible"
            android:onClick="onClick"/>


    </LinearLayout>

</LinearLayout>
